/* 公共属性 */
body{font-size: 14px;}
html,body{height:100%;margin:0;padding:0; overflow: hidden;}
.flex-container{display: flex;height: 100%;flex-direction:column;background: #f6f6f6;}
.flex-item:nth-child(1),.flex-item:nth-child(3){flex-grow:0;flex-shrink:0;}
.flex-item:nth-child(1){ height: 102px;background:url(../images/hread-bg.png) repeat-x; }
.flex-item:nth-child(3){ height: 166px;}
.flex-item:nth-child(2){flex-grow:1;flex-shrink:1;background:url(../images/bg.png) no-repeat; position: relative;background-size: 100% 100%;}

/* 间距 */
.zyl_pad_01{padding: 67px 44px 370px 44px;}
.zyl_mar_01{margin-top: 20px;}
.zyl_mar_02{margin-top: 30px;}
.header h1.log {font-size: 34px;line-height: 102px; margin-left: 7px; color:#432d17;background: url(../images/logo1.png) no-repeat center left;
    padding-left: 60px;margin-left:20%;}
.header dl{line-height: 18px;color:#333;padding-top:40px; float: right; margin-right: 20%;}
.header dd{float: left; padding:0 20px;font-size: 16px;}
.header dd:first-child{border-right:2px solid #333;;}

/* 登陆表单 */
.zyl_lofo_main{background-color: rgba(255,255,255,0.9); width: 424px; height: 466px;position: absolute; right: 20%;     top: 50%;
    margin-top: -233px; z-index: 100;border-radius: 10px;}
.zyl_lofo_main .layui-form-item{    margin-bottom: 26px;position: relative;}
.zyl_lofo_main .layui-form-item input{border-radius: 5px; border-color:#dcdcdc;}
.zyl_lofo_main .userIco1{background:url(../images/login-adm2.png) no-repeat;    
    position: absolute;z-index: 100;display: block; width: 18px;height: 22px;top: 12px;left: 14px;}
.zyl_lofo_main .userIco1:hover{ background:url(../images/login-adm1.png) no-repeat;}
.zyl_lofo_main .userIco2{background:url(../images/login-key2.png) no-repeat;
position: absolute;z-index: 100;display: block; width: 18px;height: 22px;top: 12px;left: 14px;}
.zyl_lofo_main .userIco2:hover{background:url(../images/login-key1.png) no-repeat;}
.zyl_lofo_main .zyl_lofo_vercode{line-height:46px; padding-left: 14px; font-size: 24px;border: 1px solid #e6e6e6; color:#0c3bd3;}
.zyl_lofo_main .userIco1-this{
            background:url(../images/login-adm1.png) no-repeat;
}
.zyl_lofo_main .userIco2-this{
            background:url(../images/login-key1.png) no-repeat;
}
@media screen and (max-width: 768px) {.zyl_lofo_main{width: 100%; height: 350px; right: 0;}}

.beg-footer{text-align: center;margin-top: 60px;}
.beg-footer p{color:#666;font-size: 12px;line-height: 20px;}

/* 覆盖原框架样式 */
.layui-elem-quote{background-color: inherit!important;}
.layui-input, .layui-select, .layui-textarea{background:transparent !important; padding-left:50px;height: 48px;line-height: 48px; font-size: 14px;}
.layui-input:hover, .layui-textarea:hover {border-color: #42b23b !important}
.layui-input:focus, .layui-textarea:focus {border-color: #42b23b !important}
.layui-form-checkbox[lay-skin=primary] span{color:#333 !important}

 @-webkit-keyframes autofill {
    to {
        color: #666;
        background: transparent;
    }
}

input:-webkit-autofill {
    animation-name: autofill !important;
    animation-fill-mode: both !important;
}

input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus {
    background-clip: content-box !important;
}